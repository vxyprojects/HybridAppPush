<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            app:srcCompat="@drawable/firebaseimg" />

        <Button
            android:id="@+id/button_show_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:text="show token" />

        <Button
            android:id="@+id/call_rest_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button_show_token"
            android:layout_alignLeft="@+id/button_show_token"
            android:layout_alignRight="@+id/button_show_token"
            android:layout_alignStart="@+id/button_show_token"
            android:layout_below="@+id/button_show_token"
            android:text="restApi 호출" />

        <TextView
            android:id="@+id/return_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignLeft="@+id/button_show_token"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignStart="@+id/button_show_token" />
    </RelativeLayout>
</LinearLayout>
